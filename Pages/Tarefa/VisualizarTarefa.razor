                            <div class="col-md-3">
                                <div class="p-3 border rounded">
                                    <i class="fas fa-clock fa-2x text-primary mb-2"></i>
                                    <h6 class="text-muted small">TEMPO DECORRIDO</h6>
                                    <strong>@GetTempoDecorrido(tarefa.CreatedAt)</strong>
